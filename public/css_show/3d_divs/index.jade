- var circleWidth = 20;
- var circleSpacing = 40;
- var circleStartSize = 400;
- var circles = 6;
- var tailLength = 5;
- var rotationAnimations = ['rotateY','rotateYX','rotateYXY','rotateYXYX','rotateYXYXY','rotateYXYXYX','rotateYXYXYXY']

div.center(
	style={
		'perspective': '1000px',
		'position': 'absolute',
    	'transform': 'scale(0.5)',
		'top': '50%',
		'left': '50%'
	}
)
	- for(var i = 0; i < circles; i++)
		div(
			style={
				'animation-name': rotationAnimations[i],
				'animation-duration': '5s',
				'animation-play-state': 'running',
				'animation-iteration-count': 'infinite',
				'animation-timing-function': 'linear',
			}
		)
			div.rect(
				fill='none'
				stroke='grey'
				stroke-width=circleWidth
				r=circleStartSize-(i*(circleWidth+circleSpacing))
				style={
					'width': (circleStartSize-(i*(circleWidth+circleSpacing)))*2+'px',
					'height': (circleStartSize-(i*(circleWidth+circleSpacing)))*2+'px',
					'border-color': 'hsl('+(i/circles)*360+',100%,30%)'
				}
				x=-(circleStartSize-(i*(circleWidth+circleSpacing)))
				y=-(circleStartSize-(i*(circleWidth+circleSpacing)))
			)
			div.line-container(
				style={
					transform: 'translate(-50%,-50%) rotate('+i*90+'deg)'
				}
			)
				- if(i !== 0)
					div.line(
						style={
							'top': (circleStartSize-(i*(circleWidth+circleSpacing)))+'px',
							'width': '0xp',
							'height': circleSpacing+'px',
    						'transform': 'translate(-50%,0%)',
							'border-color': 'hsl('+(i/circles)*360+',100%,30%)'
						}
					)
					div.line(
						style={
							'top': -(circleStartSize-(i*(circleWidth+circleSpacing)))+'px',
							'width': '0xp',
							'height': circleSpacing+'px',
    						'transform': 'translate(-50%,-100%)',
							'border-color': 'hsl('+(i/circles)*360+',100%,30%)'
						}
					)